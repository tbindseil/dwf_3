{
    "compilerOptions": {
        "target": "es2017",
        "module": "es2022",
        "outDir": "./build",
        "rootDirs": ["./src", "./test"],
        "strict": true,

        "downlevelIteration": true,

        "esModuleInterop": true,

        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,

        "moduleResolution": "NodeNext"
    }
}
